block mixins
	include ../blocks/mixins
block vars
	-title = 'Site'
	-bodyClass = ''

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title= title
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Kaushan+Script&family=Montserrat:wght@400;600;700&family=Roboto:ital,wght@0,400;1,300;1,700&display=swap" rel="stylesheet")
		link(rel="stylesheet", href="./styles/reset.css")
		link(rel="stylesheet", href="./styles/fontawesome.css")
		link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css")
		link(rel="stylesheet", href="./styles/styles.css")
	body(class=bodyClass)
		.wrapper
			block header
				include ../blocks/header
			block container
			block footer
				include ../blocks/footer
			block script
				include ../blocks/scripts